<div id="mainContentDiv" >
    <div id="gamesetup">
        <input type="button" id="startGame" value="Start Game!" />
    </div>
    <div id="game" hidden>
    </div>
    <div id="mainContainer">
        <div id="lobbyParent">
            <div id="lobby"></div>
        </div>
        <div id="container">
            <div id="center"></div>
            <div id="timerLabel"><span id="timerValue"></span></div>
            <div id="suddenDeathLabel">
                <span id="suddenDeathValue"></span>
                <input type="button" id="suddenDeathBtn" value="Sudden Death Shoot" hidden />
            </div>
        </div>
        <div id="chatParent">
            <div id="chat">
                <div id="chatLog"></div>
                <div id="chatInput">
                    <input type="text" id="chatText" />
                    <input type="button" class="btn btn-primary" id="chatSend" value="Send" />
                </div>
            </div>
        </div>
        
    </div>
</div>


@section scripts {
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.1.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!-- Add IWC SignalR patch https://github.com/slimjack/IWC-SignalR -->
    <script src="~/Scripts/iwc-all.min.js"></script>
    <script src="~/Scripts/signalr-patch.js"></script>
    <script src="~/Scripts/iwc-signalr.js"></script>
    <!--Add game script-->
    <script>

        var imagePath = "@Url.Content("~/images/")";
        var soundPath = "@Url.Content("~/Sounds/")";
        //console.log(imagePath);
    </script>
    <script src="~/Scripts/game.js"></script>
}