@{
    ViewBag.Title = "Home Page";
}
<div>
    <input type="text" id="message" />
    <input type="button" id="sendmessage" value="Send"/>
    <div id="players"></div>
    <div id="aliveplayers"></div>
    <p id="gameInProgress"></p>
</div>
@section scripts {
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.1.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!-- Add IWC SignalR patch https://github.com/slimjack/IWC-SignalR -->
    <script src="~/Scripts/iwc-all.min.js"></script>
    <script src="~/Scripts/signalr-patch.js"></script>
    <script src="~/Scripts/iwc-signalr.js"></script>
    <!--Add script to update the page and send messages.-->
    <script type="text/javascript">
            $(function () {
                // Declare a proxy to reference the hub.
                var game = SJ.iwc.SignalR.getHubProxy('game', {
                    client: {
                        aFunction: function () {
                            // Code here
                        }
                    }
                });
                // Set initial focus to message input box.
                $('#message').focus();

                var setupPage = function () {
                    game.server.getCurrentLobbyState().done(function (state) {
                        var names = state["names"];
                        var aliveNames = state["aliveNames"];
                        var inProgress = state["gameInProgress"] ? "Game In Progress" : "Game Not In Progress";
                        $('#players').append("<p id='playersHeader'>Players:" + (names.length === 0 ? " None" : "") + "</p>");
                        for (var i = 0; i < names.length; i++) {
                            var encodedName = $('<div />').text(names[i]).html();
                            $('#players').append("<p id='player-" + names[i] + "'>- " + encodedName + '</p>');
                        }
                        $('#aliveplayers').append("<p id='AlivelayersHeader'>Alive Players:" + (aliveNames.length === 0 ? " None" : "") + "</p>");
                        for (var j = 0; j < aliveNames.length; j++) {
                            var encodedAliveName = $('<div />').text(aliveNames[j]).html();
                            $('#aliveplayers').append("<p id='player-" + aliveNames[j] + "'>- " + encodedAliveName + '</p>');
                        }
                        $('#gameInProgress').text("Progress Status: " + inProgress);
                    });
                }
                // Start the connection.
                SJ.iwc.SignalR.start().done(function () {
                    console.log("Connection to Server Successful");
                    var handleNameReturn = function (success) {
                        if (success) {
                            setupPage();
                        } else {
                            game.server.newName(prompt("That name is taken. Please enter a different one."))
                                .done(handleNameReturn);
                        }
                    };
                    game.server.getName()
                        .done(function (name) {
                            if (name == undefined) {
                                game.server.newName(prompt("Enter your name")).done(handleNameReturn);
                            } else {
                                setupPage();
                            }
                        });
                });
            });
    </script>
}